                                        <small>
                                            <i class="fa fa-envelope-o"></i>
                                            <field name="alias_id"/>
                                        </small>
                                    </div>
                                    <div class="oe_kanban_project_list">
                                        <a t-if="record.use_tasks.raw_value"
                                           name="%(project.act_project_project_2_project_task_all)d" type="action"
                                           style="margin-right: 10px">
